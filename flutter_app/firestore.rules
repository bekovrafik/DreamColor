rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User Profiles: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Nested Books Collection: Users can read/write their own books
      match /books/{bookId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Nested Drafts Collection: Users can read/write their own drafts
      match /drafts/{draftId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Presets: Authenticated users can read, only admins (if any) can write. 
    // For now, allow read for auth users.
    match /presets/{presetId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
